@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>FilmDB - Startseite</PageTitle>

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">Willkommen bei FilmDB</h1>
            <p class="lead">Ihre persönliche Filmdatenbank</p>
        </div>
    </div>
    
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-collection-play text-primary"></i>
                        Gesehene Filme
                    </h5>
                    <p class="card-text">Sehen Sie sich Ihre Liste gesehener Filme an, sortiert nach dem Datum.</p>
                    <a href="gesehen" class="btn btn-primary">
                        <i class="bi bi-collection-play me-2"></i>
                        Gesehene Filme anzeigen
                    </a>
                </div>
            </div>
        </div>
        
        <AuthorizeView>
            <Authorized>
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-plus-circle text-success"></i>
                                Film hinzufügen
                            </h5>
                            <p class="card-text">Fügen Sie einen neuen gesehenen Film zu Ihrer Sammlung hinzu.</p>
                            <a href="film-hinzufuegen" class="btn btn-success">
                                <i class="bi bi-plus-circle me-2"></i>
                                Neuen Film erfassen
                            </a>
                        </div>
                    </div>
                </div>
            </Authorized>
        </AuthorizeView>
    </div>
</div>
